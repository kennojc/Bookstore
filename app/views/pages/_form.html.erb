<%= form_with model: reservation, remote: true do |form| %>
  <%= form.select :book_id, Book.get_available_books.collect { |book| [book.namee, book.id] }, prompt: "Select a Book" %>
  <%= form.hidden_field :user_id, value: current_user.id %>
  <%= form.submit "Reserve", data: { disable_with: "Reservation in Progress"}, class: "btn btn-primary" %>
<% end %> 